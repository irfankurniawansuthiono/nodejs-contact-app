//- modal-bootstrap-details
.modal.fade#exampleModal(tabindex='-1', aria-labelledby='exampleModalLabel', aria-hidden='true')
    .modal-dialog.modal-dialog-centered
        .modal-content
            .modal-header
                h1.modal-title.fs-5#exampleModalLabel 
                    span.text-info.detail-title 
                        span.text-danger Unknown Data 
                    |  - Details
                button.btn-close(data-bs-dismiss='modal', aria-label='Close', type='button')
            .modal-body
                .container-fluid
                    .row
                        .col-md-12
                            p
                                strong Full-Name
                    .row 
                        .col-md-12
                            p.detail-full-name 
                    .row
                        .col-md-12
                            p
                                strong Region
                    .row
                        .col-md-12
                            p.detail-region

                    .row
                        .col-md-12
                            p
                                strong Mobile-Number 
                    .row
                        .col-md-12
                            p.detail-mobile-number 
                    .row
                        .col-md-12
                            p
                                strong E-Mail 
                    .row
                        .col-md-12
                            p.detail-email 
            .modal-footer
                button.btn.btn-secondary(data-bs-dismiss='modal', type='button') Close

